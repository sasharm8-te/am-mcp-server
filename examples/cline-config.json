{
  "mcp": {
    "servers": {
      "cui-integration": {
        "transport": "stdio",
        "command": "docker",
        "args": [
          "run", "--rm", "-i",
          "--network", "host",
          "cui-mcp-server:latest"
        ],
        "env": {
          "CUI_SERVICE_URL": "http://localhost:8080",
          "DB_URL": "jdbc:mysql://localhost:3306/cui_integration",
          "DB_USERNAME": "cui_user",
          "DB_PASSWORD": "your-db-password",
          "SPRING_PROFILES_ACTIVE": "docker"
        }
      }
    }
  }
}
